# Core Configuration
DEMO_MODE=true
PORT=8000

# Reddit Ingestion Mode
# Options: json (default, no OAuth), praw (requires OAuth), rss_url (legacy), fixtures (demo)
REDDIT_INGEST_MODE=json

# Reddit JSON Configuration (no OAuth required)
REDDIT_USER_AGENT=EchoFix/1.0 CruzHacks2026
REDDIT_RSS_BASE_DOMAIN=old.reddit.com
REDDIT_RSS_TIMEOUT=10

# Score threshold gating
MIN_SCORE=2
# Optional: minimum seconds between score refresh checks
SCORE_REFRESH_SECONDS=600

# Plan + PR artifact flags
ENABLE_PLAN_MD=true
ENABLE_PR_AUTOMATION=false
PLAN_MD_DIR=backend/artifacts/plans
PLAN_MD_PATH_TEMPLATE=docs/echofix_plans/{reddit_entry_id}.md

# Seed thread URLs for demo (comma-separated)
# Example: https://reddit.com/r/webdev/comments/abc123/title,https://reddit.com/r/programming/comments/def456/title
REDDIT_SEED_THREAD_URLS=

# Reddit API Credentials (OPTIONAL - only for PRAW mode post-hackathon)
# Get from: https://www.reddit.com/prefs/apps
REDDIT_CLIENT_ID=your_reddit_client_id
REDDIT_CLIENT_SECRET=your_reddit_client_secret

# Google Gemini API
# Get from: https://ai.google.dev/
GEMINI_API_KEY=your_gemini_api_key

# GitHub Token
# Get from: https://github.com/settings/tokens
# Scopes needed: repo, workflow
GITHUB_TOKEN=your_github_personal_access_token

# Supabase
# Get from: https://supabase.com/dashboard
SUPABASE_URL=https://your-project.supabase.co
SUPABASE_SERVICE_ROLE_KEY=your_service_role_key

# Optional: Logging
LOG_LEVEL=INFO
